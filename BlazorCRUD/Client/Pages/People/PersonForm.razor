@* Forms based on model *@
<EditForm Model="@Person" OnValidSubmit="@OnValueSubmit">
    <DataAnnotationsValidator />
    <div class="form-field">
        <label>Name:</label>
        <div>
            <InputText @bind-Value="@Person.Name" />
            <ValidationMessage For="@(() => Person.Name)" />
        </div>
    </div>

    <button class="btn btn-success mt-3" type="submit">@ButtonText</button>
</EditForm>

@code {
    [Parameter] public Person Person { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save Person";
    [Parameter] public EventCallback OnValueSubmit { get; set; }
}
